@model IEnumerable<Evolent.Web.Models.VMContact>
<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                  
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmailAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmailAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Home", new { id = item.ContactID })" class="btn-bootstrap-dialog btn btn-success editDialog">
                            Edit
                        </a>
                        
                        @Ajax.ActionLink("Delete", "Delete", "Home", new { @id = item.ContactID }, new AjaxOptions { HttpMethod = "DELETE", OnSuccess = "onDelete", UpdateTargetId = "div-record" },  new { @class = "btn btn-danger" })

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    $(document).ready(function () {
        $('#Add').click(function (event) {
            event.preventDefault();
            $.get(this.href, function (response) {
                $('.divForAdd').html(response);
            });
            $('#Add-Model').modal({
                backdrop: 'static',
            }, 'show');
        });
        $('.editDialog').click(function (event) {
            event.preventDefault();
            $.get(this.href, function (response) {
                $('.divForUpdate').html(response);
            });
            $('#Edit-Model').modal({
                backdrop: 'static',
            }, 'show');
        });
    });


    function onDelete(data) {
        $("#myModal").modal();
        if (data.Status == "0") {

            $(".modal - title").html("Sucess");
            $(".modal-body p").html(data.Message);
          

            $(".mes").delay(3000).queue(function (n) {
                location.href = "../Home/Contact";
            });


        } else {
            $(".modal - title").html("Error");
            $(".mes").html(data.Message);
            $(".mes").delay(3000).queue(function (n) {
                location.href = "../Home/Contact";
            });
        }
    }

    $("#btnclose").on("click", function () {
        location.href = "../Home/Contact";
    })
</script>
